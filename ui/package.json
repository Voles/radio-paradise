{
  "name": "radio-paradise",
  "version": "1.0.0",
  "description": "Radio Paradise app",
  "main": "index.js",
  "scripts": {
    "build": "browserify index.js | uglifyjs -cm > public/bundle.js",
    "watch": "watchify index.js -o public/bundle.js --debug --verbose"
  },
  "browserify": {
    "transform": [
      "babelify",
      [
        "envify",
        {
          "API_URL": "http://localhost:8080"
        }
      ]
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/azer/radio-paradise.git"
  },
  "author": "azer",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/azer/radio-paradise/issues"
  },
  "homepage": "https://github.com/azer/radio-paradise#readme",
  "dependencies": {
    "jsonp": "^0.2.0",
    "key-event": "0.0.0",
    "play-audio": "^0.1.0",
    "react": "^0.14.1",
    "react-dom": "^0.14.1",
    "react-redux": "^4.0.0",
    "redux": "^3.0.4",
    "redux-thunk": "^1.0.0"
  },
  "devDependencies": {
    "babelify": "^6.1.3",
    "browserify": "^12.0.1",
    "envify": "^3.4.0",
    "uglify-js": "^2.5.0",
    "watchify": "^3.6.0"
  }
}
